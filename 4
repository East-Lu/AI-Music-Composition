    <script>
        // JSON data example
        const songData = {
            "songName": "跳楼机",
            "author": "LBI利比（时柏尘）",
            "lyrics": `跳楼机，
飞速下降的感受，
仿佛迷失在深夜的空洞，
人群中的孤独，无法呼吸...`,
            "comments": [
              "你已经奔向阳光，而我却走不出雨季。",
              "《小王子》里有一句台词说：“想要和别人制造羁绊就要承受掉眼泪的风险。”",
            ],
            "videoLink": "https://raw.githubusercontent.com/East-Lu/AI-Music-Composition/main/2.mp4",
            "audioLink": "https://raw.githubusercontent.com/East-Lu/AI-Music-Composition/main/3.mp3"
        };

        // Populate song details
        document.querySelector('h1').textContent = `${songData.songName} - ${songData.author}`;
        document.getElementById('lyrics').textContent = songData.lyrics;

        // Display comments
        const commentList = document.getElementById('commentList');
        songData.comments.forEach(comment => {
            const li = document.createElement('li');
            li.textContent = comment;
            commentList.appendChild(li);
        });

        // Video link, replace with actual path to your video file
        document.querySelector('video source').src = songData.videoLink;

        // Audio link
        document.querySelector('audio source').src = songData.audioLink;
    </script>

